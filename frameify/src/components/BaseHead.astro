---
import moment from 'moment'

interface Props {
	title: string;
	description: string;
	image?: string;
}

// const canonicalURL = new URL(Astro.url.pathname, Astro.site)

const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props

const jsonFrameData = JSON.stringify({
	version: 'next',
	imageUrl: 'https://frameify.xyz/banners/farcaster-framing.png?' + moment().unix(),
	button: {
		title: '「 ✦ Frameify YOUR Websites ✦ 」',
		action: {
			type: 'launch_frame',
			name: 'Frameify by Castr GÜRŲ',
			url: 'https://frameify.xyz',
			splashImageUrl: 'https://frameify.xyz/splash.gif',
			splashBackgroundColor: '#a728b1',
		}
	}
})
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
<link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

<!-- Canonical URL -->
<!-- <link rel="canonical" href={canonicalURL} /> -->

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Farcaster -->
<meta property="fc:frame" content={jsonFrameData} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter/X -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Plausible Analytics -->
<script defer data-domain="frameify.xyz" src="https://plausible.castr.guru/js/script.file-downloads.outbound-links.pageview-props.tagged-events.js"></script>
<script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>

<script is:inline>
;(async () => {
	/* Load frame initialization. */
	const initFrame = (await import('/js/initFrame.js')).default

	/* Initialize frame. */
	initFrame()
})()
</script>
